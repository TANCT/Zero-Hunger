@model ZeroHunger.Pages.UserPage.CreateUserModel
@{
@if (@HttpContext.Request.Cookies["role"] != null && @HttpContext.Request.Cookies["role"].Equals("4"))
    {
<div class="page-content">
    <form method="post" class="form-v10-content">
        <h2 class="text-info" style="text-align:center;margin:0px 10px 30px 10px;">Add User</h2>
        <h5 style="color:red;">@Model.message</h5>
        <div>
            <div class="form-group row">
				<div class="col-4">
                   <label asp-for="user.UserType">User Type</label>
                </div>
                <div class="col-6">
<input min='1' max='4' asp-for="user.UserType"  id="usertype" class="input-text" placeholder="Usertype" required>                </div>
                
                <div class="col-4">
                   <label asp-for="user.UserName">Username</label>
                </div>
                <div class="col-6">
					<input asp-for="user.UserName" class="input-text" placeholder="Username" required>
                </div>
                <div class="col-4">
					<label asp-for="user.UserPwd">Password</label>
					
                </div>
                <div class="col-6">
					<input asp-for="user.UserPwd"  id="password" class="input-text" placeholder="Password" required>
                </div>
                <div class="col-4">
					<label asp-for="user.UserBirth">BirthDate</label>
							
                </div>
                <div class="col-6">
                   <input asp-for="user.UserBirth"  required>
                </div>
				<div class="col-4">
					<label asp-for="user.UserEmail">Email</label>
							
                </div>
                <div class="col-6">
					<input asp-for="user.UserEmail" class="email" id="email" placeholder="Email" required>
                </div>
				<div class="col-4">
					<label asp-for="user.UserAdrs1">Address 1</label>
							
                </div>
                <div class="col-6">
					<input asp-for="user.UserAdrs1"  class="street" id="add1" placeholder="Address 1" required>
                </div><div class="col-4">
					<label asp-for="user.UserAdrs2"> Address 2</label>
							
                </div>
                <div class="col-6">
					<input asp-for="user.UserAdrs2" class="street" id="add2" placeholder="Address 2" required>
                </div>
				<div class="col-4">
					<label asp-for="user.UserPhone">Phone Number</label>
							
                </div>
                <div class="col-6">
					<input asp-for="user.UserPhone" class="phone" id="phone" placeholder="Phone Number" required>
                </div>

				
            </div>
            <div class="form-group row">
                <div class="col-5 offset-4">
                    <input type="submit" value="Create" class="btn btn-primary form-control" />


                </div>
                <div class="col-5 offset-4">
                    <a asp-page="UserView" class="btn btn-sucess form-control">Back to List</a>
                </div>
            </div>
        </div>
    </form>
</div>
<div></div>
}else{
<script>
     alert("Sorry, you are not eligible to enter this page.");
     location.href = '/Index';
     </script>
}}


