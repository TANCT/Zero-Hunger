@page
@model ZeroHunger.Pages.editProfileModel
@{
    var photopath = "~/profileImg/default.jpg";
    if (Model.loginUser.ProfileImage != null)
    {
        photopath = "~/profileImg/" + Model.loginUser.ProfileImage;
    }
}
<head>
    <title>Profile</title>
	<script src="https://netdna.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="~/css/profile.css" />
</head>
<body>
    
    <form method="post" enctype="multipart/form-data">
<div class="container">
<div class="row">
    
  <div class="profile-nav col-md-3">
      <div class="panel">
          <div class="user-heading round">
              <script>
                 
              </script>
               <a href="#">
                <img class="imageThumbnail"  src="@photopath" asp-append-version="true"/>
              </a>
          </div>
          <br />
          <div class="form-group row">
              
            <div class="col-14">
                <input asp-for="ImageFile" class="custom-file-input" accept="image/*" >
                <label class="custom-file-label">Upload Profile Picture</label>
            </div>
            <span asp-validation-for="ImageFile" class="text-danger"></span>
          </div>
          <ul class="nav nav-pills nav-stacked">
              <li><a href="#"> <i class="fas fa-edit"></i> Edit profile</a></li>
          </ul>
      </div>
  </div>
  <div class="profile-info col-md-9">
      <div class="panel">
          <div class="bio-graph-heading">
              <h1 style="text-align:center;">Profile</h1>
          </div>
          <div class="panel-body bio-graph-info">
              
              <div class="row">
                  <div class="bio-row">
                      <p><span>Name </span>: <input asp-for="loginUser.UserName" class="input-text" required></p>
                  </div>
                  <div class="bio-row">
                      <p><span>Birthday</span>: <input asp-for="loginUser.UserBirth" type="date" required></p>
                  </div>
                  <div class="bio-row">
                      <p><span>Email </span>: <input asp-for="loginUser.UserEmail" class="input-text" readonly></p>
                  </div>
                  <div class="bio-row">
                      <p><span>Phone </span>: <input asp-for="loginUser.UserPhone" class="input-text" required></p>
                  </div>
                   <div class="bio-row">
                      <p><span>Address 1 </span>: <input asp-for="loginUser.UserAdrs1" class="input-text" required></p>
                  </div>
                  <div class="bio-row">
                      <p><span>Address 2 </span>: <input asp-for="loginUser.UserAdrs2" class="input-text" required></p>
                  </div>
                  <div style="margin:auto auto;">
                  <input type="submit" value="Save" class="btn btn-primary form-control" />
                  </div>
              </div>
             
          </div>
      </div>
      
  </div>
</div>
</div>
</form>
</body>