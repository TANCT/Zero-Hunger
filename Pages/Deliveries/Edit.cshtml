@page
@using ZeroHunger.Model
@model ZeroHunger.Pages.Deliveries.EditModel

@if (@HttpContext.Request.Cookies["role"] != null && @HttpContext.Request.Cookies["role"].Equals("4"))
{
    <div class="row pb-2">
        <h2>Edit Delivery Request</h2>
    </div>
    <form method="post" asp-page="Edit">   
        <input type="hidden" asp-for="Delivery.DeliveryID" />
        <div class="border p-3 mt-4">
            <div class="mb-3">
                Volunteer Name
                <select asp-for="Delivery.VolunteerID"  asp-items="Model.VolunteerList" class="form-control" required>
                </select>
            </div>
            <div class="mb-3">
                <label asp-for="Delivery.DeliveryTime"></label>
                <input asp-for="Delivery.DeliveryTime" class="form-control" required/>
            </div>
            <div class="mb-3">
                <label asp-for="Delivery.DeliveryStatus"></label>
                <select class="form-control" asp-for="Delivery.DeliveryStatus" asp-items="Html.GetEnumSelectList<DeliveryStatus>()" required></select>
            </div>
            <div class="mb-3">
                Receiver Name
                <select id="receiver" asp-for="Delivery.ReceiverID" asp-items="Model.ReceiverList" class="form-control" required>
                </select>
            </div>
            <div class="mb-3">
                Receiver Phone
                <span id="receiverphone" class="form-control">----</span>
            </div>
            <div class="mb-3">
                Receiver Address
                <div id="receiveradrs1" class="form-control">----</div>
                <div id="receiveradrs2" class="form-control">----</div>
            </div>
            <button type="submit" class="btn btn-primary form-control" style="width:150px;">Edit</button>
            <a asp-page="Index" class="btn btn-secondary form-control" style="width:150px;">Back to List</a>  
        </div>
    </form>
    <br/><br/><br/><br/><br/>

    @section Scripts{
        <script src="~/js/DeliveryItem.js"></script>
        @{
        <partial name="_ValidationScriptsPartial"></partial>
        }
    }
}else{
     <script>
     alert("Sorry, you are not eligible to enter this page.");
     location.href = '/Index';
     </script>
}
